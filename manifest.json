{
  "manifest_version": 2,

  "name": "EchtkPvL",
  "description": "EchtkPvL's Chrome extension",
  "short_name": "EchtkPvL",
  "author": "Jonas Berner @ EchtkPvL",

  "version": "0.5.1",

  "permissions": [
    "activeTab"
  ],
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "content_scripts": [{
    "matches": [
      "http://*/*",
      "https://*/*"
    ],
    "js": [
      "js/main.js"
    ]
  }],
  "icons": {
    "16": "icon/icon_16.png",
    "48": "icon/icon_48.png",
    "128": "icon/icon_128.png"
  }
}
